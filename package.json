{
    "name": "uevent",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "docker:up": "docker-compose --env-file .env.development up -d",
        "docker:view": "docker ps -a",
        "docker:stop": "docker-compose stop",
        "docker:down": "docker-compose down -v",

        "setup:db": "ts-node src/setupdb.ts",

        "migrate": "dotenv -e .env.development -- npx prisma migrate deploy",
        "migrate:create": "dotenv -e .env.development -- npx prisma migrate dev",
        "migrate:generate": "dotenv -e .env.development -- npx prisma generate",
        "migrate:seed": "dotenv -e .env.development -- npx prisma db seed",
        "migrate:reset": "npm run migrate && npm run migrate:generate && npm run build && dotenv -e .env.development -- npx prisma migrate reset --force",
        "migrate:refresh": "npm run migrate:reset && npm run migrate:generate",

        "start": "nest start",
        "start:prod": "node dist/main",
        "start:dev": "nest start --watch",
        "start:debug:dev": "nest start --debug --watch",
        "refresh": "npm run migrate:refresh; npm run start:dev",

        "test": "npx jest --clearCache && npx jest",
        "test:unit": "npx jest --watch --config jest-unit.config.ts",
        "test:e2e": "npx jest --watch --config jest-e2e.config.ts",
        "test:watch": "npx jest --watch",
        "test:cov": "npx jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",

        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@faker-js/faker": "^9.6.0",
        "@nestjs/axios": "^4.0.0",
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/event-emitter": "^3.0.1",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mapped-types": "^2.1.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/schedule": "^5.0.1",
        "@nestjs/swagger": "^11.1.1",
        "@prisma/client": "^6.5.0",
        "@types/cookie-parser": "^1.4.8",
        "@types/csurf": "^1.11.5",
        "@types/stripe": "^8.0.417",
        "axios": "^1.8.3",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cookie-parser": "^1.4.7",
        "csurf": "^1.2.2",
        "dotenv": "^16.4.7",
        "dotenv-expand": "^12.0.1",
        "googleapis": "^146.0.0",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.13.0",
